<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/lato</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_text_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="black_text_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/lato_black</item>
    </style>

    <style name="bold_italic_text_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/lato_bold_italic</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>